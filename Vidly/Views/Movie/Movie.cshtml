@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movie";
}

<h2>Movies</h2>


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie ID</th>
            <th>Movie Name</th>
        </tr>

    </thead>

    <tbody>
        @foreach (var Movie in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Movie.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Movie.Name)
                </td>
                
            </tr>
        }
    </tbody>



</table>