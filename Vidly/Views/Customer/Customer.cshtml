@model IEnumerable<Vidly.Models.Customer>


@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>IsSubscribedToNewsletter</th>
            <th>Membership Type</th>

        </tr>

     </thead>

    <tbody>

        @foreach(var customer in Model )
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => customer.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => customer.IsSubscribedToNewsletter)
            </td>

            <td>
                @Html.DisplayFor(modelItem => customer.MembershipTypeId)
            </td>



        </tr>
            }
    </tbody>
</table>

